@model Instructor
@{
    ViewData["Title"] = "Details";
}
<link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />



<h1>@Model.Fname @Model.Lname 's details</h1>

<h1 class="alert alert-info" style="background:white">

    Id: @Model.Id
</h1>
<h1 class="alert alert-info" style="background:white">

    Name: @Model.Fname @Model.Lname
</h1>
<h1 class="alert alert-info" style="background:white">

    Phone: @Model.Phone
</h1>
<h1 class="alert alert-info" style="background:white">

    Email: @Model.Email
</h1>


<h1 class="alert alert-info" style="background:white">
    @Model.Fname @Model.Lname' Courses: <br />

    @foreach (var s in Model.Courses)
    {

        <p> * @s.Name : @s.Duration days</p>


    }
</h1>


